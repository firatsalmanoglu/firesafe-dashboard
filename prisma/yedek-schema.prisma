

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  id                  String @id
  userId              Int @default(autoincrement()) @unique
  userName            String @unique
  password            String
  firstName           String
  lastName            String
  bloodType           UserBloodType
  birthday            DateTime
  sex                 UserSex
  photo               String?
  email               String
  phone               String
  registrationDate    DateTime @default (now())
  
  institutionId       Int
  institution         Institutions @relation(fields: [institutionId], references: [institutionId])

  roleId              Int 
  role                Roles @relation(fields: [roleId], references: [roleId])

  MaintenanceCards MaintenanceCards[]

  OfferCards OfferCards[] @relation(name: "user1")

  OfferCards1 OfferCards[] @relation(name: "user2")

  Devices Devices[]

  Notifications Notifications[] @relation(name: "user1")

  Notifications1 Notifications[] @relation(name: "user2")

  Appointments Appointments[] @relation(name: "user1")

  Appointments1 Appointments[] @relation(name: "user2")

  Logs Logs[]
}

model Institutions {
  id                  Int @id @default(autoincrement())
  institutionId       Int @default(autoincrement()) @unique
  name                String
  address             String
  events              Events []
  announcements       Announcements []

  Users               Users[]

  TeamsMemebers TeamsMemebers[]
}

model Roles {
  id                  Int @id @default(autoincrement())
  roleId              Int @default(autoincrement()) @unique
  name                String

  Users Users[]
}

model Devices {
  id                  Int @id @default(autoincrement())
  deviceId            Int @default(autoincrement()) @unique
  serialNumber        String @unique
  qrcode              String @unique
  productionDate      DateTime
  lastControlDate     DateTime
  expirationDate      DateTime
  location            String
  photo               String
  currentStatus       DeviceStatus

  typeId              Int
  type                DeviceTypes @relation(fields: [typeId], references: [deviceTypeId]) 

  featureId           Int
  feature             DeviceFeatures @relation(fields: [featureId], references: [deviceFeaturesId])

  ownerId             Int 
  owner               Users @relation(fields: [ownerId], references: [userId])
  
  details             String

  MaintenanceCards MaintenanceCards[]
}

model DeviceTypes {
  id                  Int @id @default(autoincrement())
  deviceTypeId        Int @default(autoincrement()) @unique
  name                String

  Devices Devices[]
}

model DeviceFeatures {
  id                  Int @id @default(autoincrement())
  deviceFeaturesId    Int @default(autoincrement()) @unique
  name                String

  Devices Devices[]
}

model MaintenanceCards {
  id                  Int @id @default(autoincrement())
  maintenanceCardId   Int @default(autoincrement()) @unique
  maintenanceDate     DateTime @default (now())
  nextMaintenanceDate DateTime

  typeId              Int
  type                Services @relation(fields: [typeId], references: [serviceId])

  deviceId            Int
  device              Devices @relation(fields: [deviceId], references: [deviceId])

  providerId          Int 
  provider            Users @relation(fields: [providerId], references: [userId])

  operations          Operations[]
            

  details             String

}

model Operations {
  id                  Int @id @default(autoincrement())
  operationId         Int @default(autoincrement()) @unique
  name                String
  maintenanceCards    MaintenanceCards[]
}

model Services {
  id                  Int @id @default(autoincrement())
  serviceId           Int @default(autoincrement()) @unique
  name                String

  MaintenanceCards MaintenanceCards[]

  OfferCards OfferCards[]
}

model OfferCards {
  id                  Int @id @default(autoincrement())
  offerCardId         Int @default(autoincrement()) @unique
  offerDate           DateTime @default (now())
  validityDate        DateTime
  unitPrice           Decimal
  size                Decimal
  amount              Decimal

  paymentTermId       Int
  paymentTerm         PaymentTermTypes @relation(fields: [paymentTermId], references: [paymentTermTypeId])

  servicesId          Int
  service             Services @relation(fields: [servicesId], references: [serviceId])

  status              OfferStatus

  creatorId           Int
  creator             Users @relation(fields: [creatorId], references: [userId], name: "user1")

  recipientId         Int
  recipient           Users @relation(fields: [recipientId], references: [userId], name: "user2")

  details             String

  

}

model PaymentTermTypes {
  id                  Int @id @default(autoincrement())
  paymentTermTypeId   Int @default(autoincrement()) @unique
  name                String

  OfferCards OfferCards[]
}

model Notifications {
  id                  Int @id @default(autoincrement())
  notificationId      Int @default(autoincrement()) @unique

  content             String

  creatorId           Int
  creator             Users @relation(fields: [creatorId], references: [userId], name: "user1")

  recipientId         Int
  recipient           Users @relation(fields: [recipientId], references: [userId], name: "user2")

  notificationDate    DateTime @default (now()) 
  isRead              NotificationStatus

  typeId              Int
  type                NotificationTypes @relation(fields: [typeId], references: [notificationTypeId])
}

model NotificationTypes {
  id                  Int @id @default(autoincrement())
  notificationTypeId  Int @default(autoincrement()) @unique
  name                String

  Notifications Notifications[]
}

model Appointments {
  id                  Int @id @default(autoincrement())
  appointmentId       Int @default(autoincrement()) @unique
  tittle              String
  content             String
  start               DateTime
  end                 DateTime
  create              DateTime @default (now())

  creatorId           Int
  creator             Users @relation(fields: [creatorId], references: [userId], name: "user1")

  recipientId         Int
  recipient           Users @relation(fields: [recipientId], references: [userId], name: "user2")

}

model Logs {
  id                  Int @id @default(autoincrement())
  logId               Int @default(autoincrement()) @unique
  date                DateTime @default (now())

  userId              Int
  user                Users @relation(fields: [userId], references: [userId])

  actionId            Int
  action              Actions @relation(fields: [actionId], references: [actionId])

  tableId             Int
  table               Tables @relation(fields: [tableId], references: [tableId])

  IP                  String
}

model Actions {
  id                 Int @id @default(autoincrement())
  actionId           Int @default(autoincrement()) @unique
  name               String

  Logs Logs[]
}

model Tables {
  id                 Int @id @default(autoincrement())
  tableId            Int @default(autoincrement()) @unique
  name               String

  Logs Logs[]
}

model Events {
  id                 Int @id @default(autoincrement())
  eventId            Int @default(autoincrement()) @unique
  title              String
  description        String
  startTime          DateTime
  endTime            DateTime
  institutionId      Int
  institution        Institutions @relation(fields: [institutionId], references: [institutionId])

}

model Announcements {
  id                 Int @id @default(autoincrement())
  announcementId     Int @default(autoincrement()) @unique
  title              String
  description        String
  date               DateTime
  institutionId      Int
  institution        Institutions @relation(fields: [institutionId], references: [institutionId])
}

model Teams {
  id                 Int @id @default(autoincrement())
  teamId             Int @default(autoincrement()) @unique
  name               String
  teamsMemebers      TeamsMemebers []
}

model TeamsMemebers {
  id                  Int @id @default(autoincrement())
  teamsMemeberId      Int @default(autoincrement()) @unique
  teams               Teams []
  firstName           String
  lastName            String
  bloodType           UserBloodType
  birthday            DateTime
  sex                 UserSex
  photo               String?
  email               String
  phone               String
  registrationDate    DateTime @default (now())
  
  institutionId       Int
  institution         Institutions @relation(fields: [institutionId], references: [institutionId])
}

enum UserSex {
  Erkek
  Kadin
  Diger
}

enum UserBloodType {
  ARhP
  ARhN
  BRhP
  BRhN
  ABRhP
  ABRhN
  ORhP
  ORhN
}

enum DeviceStatus {
  Aktif
  Pasif
}

enum OfferStatus {
  Onaylandi
  Red
  Beklemede
}

enum NotificationStatus {
  Okundu
  Okunmadi
}